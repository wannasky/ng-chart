{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": [
      "node"
    ],
    "paths": {
      "ng-chart": [ "../../components/ng-chart.module.ts" ]
    }
  },
  "include": [
    "../src/**/*"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "fullTemplateTypeCheck": true,
    "strictMetadataEmit": true,
    "strictInjectionParameters":true
  }
}
